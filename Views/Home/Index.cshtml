@{
    ViewData["Title"] = "LH Pet";
}

<div class="container">

    <h1> >>> Sistema de Controle Interno - LH Pet <<< </h1>

            <table class="table table-hover table-sm table-bordered table-sm caption-top">
                <caption>Lista de clientes</caption>
                <thead class="table-dark">
                    <tr>
                        <th scope=" col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">CPF</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Paciente (pet)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @ViewBag.listaClientes) {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Nome</td>
                            <td>@item.Cpf</td>
                            <td>@item.Email</td>
                            <td>@item.Paciente</td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-action="AdicionarCliente" method="post">
                <div class="mb-3">
                    <label for="nomeCliente" class="form=label">Nome</label>
                    <input type="text" class="form-control" id="nomeCliente" name="Nome">
                </div>
                <div class="mb-3">
                    <label for="cpfCliente" class="form=label">CPF</label>
                    <input type="text" class="form-control" id="cpfCliente" name="Cpf">
                </div>
                <div class="mb-3">
                    <label for="emailCliente" class="form=label">E-mail</label>
                    <input type="text" class="form-control" id="emailCliente" name="Email">
                </div>
                <div class="mb-3">
                    <label for="pacienteCliente" class="form=label">Paciente (pet)</label>
                    <input type="text" class="form-control" id="pacienteCliente" name="Paciente">
                </div>
                <button type="submit" class="btn btn-primary">Adicionar Cliente</button>
            </form>

            <form asp-action="ExcluirCliente" method="post" class="mt-3">
                <div class="mb-3">
                    <label for="idClienteExcluir" class="form-label">ID do Cliente para excluir</label>
                    <input type="number" class="form-control" id="idClienteExcluir" name="id">
                </div>
                <button type="submit" class="btn btn-primary">Excluir Cliente</button>
            </form>

            <table class="table table-hover table-sm table-bordered table-sm caption-top">
                <caption>Lista de fornecedores</caption>
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">CNPJ</th>
                        <th scope="col">E-mail</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @ViewBag.listaFornecedores) {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Nome</td>
                            <td>@item.Cnpj</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-action="AdicionarFornecedor" method="post">
                <div class="mb-3">
                    <label for="nomeFornecedor" class="form=label">Nome</label>
                    <input type="text" class="form-control" id="nomeFornecedor" name="Nome">
                </div>
                <div class="mb-3">
                    <label for="cnpjFornecedor" class="form=label">CNPJ</label>
                    <input type="text" class="form-control" id="cnpjFornecedor" name="Cnpj">
                </div>
                <div class="mb-3">
                    <label for="emailFornecedor" class="form=label">E-mail</label>
                    <input type="text" class="form-control" id="emailFornecedor" name="Email">
                </div>
                <button type="submit" class="btn btn-primary">Adicionar Fornecedor</button>
            </form>

            <form asp-action="ExcluirFornecedor" method="post" class="mt-3">
                <div class="mb-3">
                    <label for="idFornecedorExcluir" class="form-label">ID do Fornecedor para excluir</label>
                    <input type="number" class="form-control" id="idFornecedorExcluir" name="id">
                </div>
                <button type="submit" class="btn btn-primary">Excluir Fornecedor</button>
            </form>
</div>
